        stack_name: {{ cloud_network_interconnect_name }}-stack
        template: peer_a.config

    - ec2_vpc_vpn_facts:
        filters:
          "tag:Name": {{ cloud_network_interconnect_name }}-vpn


- hosts: peer_b
  gather_facts: yes

  tasks:
    - ios_config:
        src: peer_b.config
