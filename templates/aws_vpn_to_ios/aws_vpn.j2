AWSTemplateFormatVersion: '2010-09-09'
Resources:
  vpc:
    Type: AWS::EC2::VPC
    Properties:
      CidrBlock: {{ cloud_network_interconnect_vpc_cidr }}
      Tags:
        - Key: Name
          Value: {{ cloud_network_interconnect_name }}-vpc
  subnet:
    Type: AWS::EC2::Subnet
    Properties:
      VpcId:
        Ref: vpc
      CidrBlock: {{ cloud_network_interconnect_peer_a_cidr }}
  privateroutetable:
    Type: AWS::EC2::RouteTable
    Properties:
      VpcId:
        Ref: vpc
      Tags:
        - Key: Name
          Value: {{ cloud_network_interconnect_name }}-privateroutetable
  subnetroutetableassociation:
    Type: AWS::EC2::SubnetRouteTableAssociation
    Properties:
      RouteTableId:
        Ref: privateroutetable
      SubnetId:
        Ref: subnet
  customergw:
    Type: AWS::EC2::CustomerGateway
    Properties:
      Type: ipsec.1
      BgpAsn: '65000'
      IpAddress: {{ cloud_network_interconnect_peer_b_public_ip }}
      Tags:
        - Key: Name
          Value: {{ cloud_network_interconnect_name }}-customergw
  vpngw:
    Type: AWS::EC2::VPNGateway
    Properties:
      Type: ipsec.1
      Tags:
        - Key: Name
          Value: {{ cloud_network_interconnect_name }}-vpngw
  vpngwattachment:
    Type: AWS::EC2::VPCGatewayAttachment
    Properties:
      VpcId:
        Ref: vpc
      VpnGatewayId:
        Ref: vpngw
  vpn:
    Type: AWS::EC2::VPNConnection
    Properties:
      Type: ipsec.1
      StaticRoutesOnly: true
      CustomerGatewayId:
        Ref: customergw
      VpnGatewayId:
        Ref: vpngw
      Tags:
        - Key: Name
          Value: {{ cloud_network_interconnect_name }}-vpn
  vpnconnectionroute:
    Type: AWS::EC2::VPNConnectionRoute
    Properties:
      DestinationCidrBlock: {{ cloud_network_interconnect_peer_b_cidr }}
      VpnConnectionId:
        Ref: vpn
  vpngwroutepropagation:
    Type: AWS::EC2::VPNGatewayRoutePropagation
    DependsOn: vpngwattachment
    Properties:
      RouteTableIds:
        - Ref: privateroutetable
      VpnGatewayId:
        Ref: vpngw
